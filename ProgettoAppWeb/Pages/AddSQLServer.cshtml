@page
@model ProgettoAppWeb.Pages.AddSQServerModel

@{
    ViewData["Title"] = "Aggiungi SQLServer";
}

<h1>Connettiti ad un Database SQLServer</h1>

<div class="row">
   <h3>Inserisci i parametri per aprire la connessione con un database SQLServer</h3>
    <div>
        <form method="post" asp-page-handler="NotLocal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="server.serverAddress" class="control-label"></label>
                <input asp-for="server.serverAddress" class="form-control" />
                <span asp-validation-for="server.serverAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="server.db" class="control-label"></label>
                <input asp-for="server.db" class="form-control" />
                <span asp-validation-for="server.db" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="server.username" class="control-label"></label>
                <input asp-for="server.username" class="form-control"/>
                <span asp-validation-for="server.username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="server.password" class="control-label"></label>
                <input asp-for="server.password" class="form-control" type="password"/>
                <span asp-validation-for="server.password" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-bottom:10px; padding-top:10px">
                <input type="submit" value="Apri Database" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row local">
   <h3>Inserisci i parametri per aprire la connessione con un database SQLServer con trusted connection</h3>
    <div>
        <form method="post" asp-page-handler="Local">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="server.serverAddress" class="control-label"></label>
                <input asp-for="server.serverAddress" class="form-control" />
                <span asp-validation-for="server.serverAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="server.db" class="control-label"></label>
                <input asp-for="server.db" class="form-control" />
                <span asp-validation-for="server.db" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top:10px; padding-bottom:10px">
                <input type="submit" value="Apri Database" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-primary indietro">Indietro</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
