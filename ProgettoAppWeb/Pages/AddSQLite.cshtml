@page
@model ProgettoAppWeb.Pages.AddSQLiteModel

@{
    ViewData["Title"] = "Aggiungi SQLSite";
}

<h1>Connettiti ad un Database SQLite</h1>

<div class="row">
   <h3>Inserisci i parametri per aprire la connessione con un database SQLite</h3>
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="padding-bottom: 10px">
                <label asp-for="lite.path" class="control-label"></label>
                <input asp-for="lite.path" class="form-control" />
                <span asp-validation-for="lite.path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Apri Database" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="padding-top: 10px">
    <a asp-page="Index" class="btn btn-primary">Indietro</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
